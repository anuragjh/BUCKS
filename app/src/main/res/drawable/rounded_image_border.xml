<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background with rounded corners -->
    <item>
        <shape android:shape="oval">
            <solid android:color="@android:color/white"/> <!-- Background color -->
            <corners android:radius="16dp"/> <!-- Adjust the radius for rounded corners -->
        </shape>
    </item>
    <!-- Border -->
    <item android:bottom="2dp" android:left="2dp" android:right="2dp" android:top="2dp">
        <shape android:shape="oval">
            <solid android:color="@color/teal_700"/> <!-- Border color -->
            <corners android:radius="16dp"/> <!-- Same radius for rounded corners -->
        </shape>
    </item>
</layer-list>
