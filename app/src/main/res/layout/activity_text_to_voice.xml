<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextureView
        android:id="@+id/backgroundTextureView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@android:color/transparent">

        <!-- Greeting TextView -->
        <TextView
            android:id="@+id/helloTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello Aman"
            android:textSize="32sp"
            android:textStyle="bold"
            android:layout_marginTop="40dp"
            android:textColor="@color/white"
            android:layout_gravity="center_horizontal"
            android:shadowColor="@android:color/darker_gray"
            android:shadowRadius="4.0"
            android:shadowDx="2.0"
            android:shadowDy="2.0"/>

        <!-- Paging layout with left and right buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="16dp">

            <ImageView
                android:id="@+id/leftButton"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/backarrow"
                android:layout_marginStart="16dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/button_background"
                android:elevation="8dp"
                android:padding="7dp"/>

            <TextView
                android:id="@+id/imageGeneratorTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Voice Generator"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_marginHorizontal="16dp"/>

            <ImageView
                android:id="@+id/rightButton"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/backarrow"
                android:rotation="180"
                android:layout_marginEnd="16dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/button_background"
                android:elevation="8dp"
                android:padding="7dp"/>
        </LinearLayout>

        <!-- Voice Selection Spinner -->
        <Spinner
            android:id="@+id/voiceSelectionSpinner"
            android:layout_width="match_parent"
            android:background="@color/white"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"/>

        <!-- Input Layout for text prompt -->
        <androidx.cardview.widget.CardView
            android:id="@+id/inputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Edit Text for input -->
                <EditText
                    android:id="@+id/editText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter text"
                    android:background="@drawable/edittext_background"
                    android:padding="12dp"
                    android:layout_marginBottom="12dp"
                    android:textColorHint="@color/gray"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:minHeight="100dp"
                android:maxLines="5"
                android:scrollbars="vertical"/>

                <!-- Generate Voice Button -->
                <Button
                    android:id="@+id/generateVoiceButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Generate Voice"
                    android:textColor="@color/white"
                    android:background="@drawable/button_background"
                    android:elevation="6dp"
                    android:padding="12dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Download Voice Layout -->
        <LinearLayout
            android:id="@+id/downloadVoiceLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="16dp"
            android:visibility="gone"> <!-- Initially hidden -->

            <Button
                android:id="@+id/downloadVoiceButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Download Voice"
                android:textColor="@color/white"
                android:background="@drawable/button_background"
                android:elevation="6dp"
                android:padding="12dp"/>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
